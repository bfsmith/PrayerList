<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout android:id="@+id/relativeLayout1" 
   android:layout_width="fill_parent" 
   android:layout_height="fill_parent"
   xmlns:android="http://schemas.android.com/apk/res/android">
  	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight=".8">
	    <TextView android:text="Title" android:id="@+id/activeTitle" android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content" android:textSize="20dp" android:padding="2dp"></TextView>
	   	<TextView android:text="Description" android:id="@+id/activeDescription" android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content" android:textSize="12dp"></TextView>	    
	</LinearLayout>
	<Button android:text="@string/Answered" 
		android:id="@+id/answeredButton" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_margin="2px"></Button>	
 </RelativeLayout>